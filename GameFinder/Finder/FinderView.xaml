<UserControl
    x:Class="GameFinder.Finder.FinderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GameFinder.Finder"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Name="View"
    d:DesignHeight="450"
    d:DesignWidth="500"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:FinderViewModel />
    </UserControl.DataContext>

    <md:DialogHost DialogContent="{Binding DialogViewModel}" IsOpen="{Binding IsDialogOpen}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Row="0"
                Grid.Column="0"
                Width="30"
                Height="30"
                Margin="5"
                Padding="-15"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{x:Static md:Transitioner.MovePreviousCommand}"
                Content="{md:PackIcon Kind=ChevronLeft}"
                Style="{StaticResource MaterialDesignFlatButton}"
                ToolTip="Go back" />

            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <md:PackIcon
                    Width="40"
                    Height="40"
                    Margin="15"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="Steam" />
                <TextBlock
                    Margin="15"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="22"
                    Text="Game Finder" />
            </StackPanel>

            <StackPanel
                Grid.Row="0"
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button
                    Width="30"
                    Height="30"
                    Margin="5"
                    Padding="-15"
                    Command="{Binding GitHubCommand}"
                    Content="{md:PackIcon Kind=GithubCircle}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="View on GitHub" />
                <Button
                    Width="30"
                    Height="30"
                    Margin="5"
                    Padding="-15"
                    Command="{Binding ReportBugCommand}"
                    Content="{md:PackIcon Kind=Bug}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="Report a bug" />
            </StackPanel>


            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <UserControl Grid.Row="0" Content="{Binding MyProfileViewModel}" />

                <ScrollViewer
                    Grid.Row="1"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Friends}" />
                </ScrollViewer>

                <Button
                    Grid.Row="2"
                    Width="35"
                    Height="35"
                    Margin="5"
                    Padding="-15"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Command="{Binding LaunchRandomGameCommand}"
                    Content="{md:PackIcon Kind=AutoFix}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="Launch a random game" />
            </Grid>

            <ScrollViewer
                Name="ScrollViewer"
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                HorizontalScrollBarVisibility="Disabled"
                SizeChanged="ScrollViewerSizeChanged"
                VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Games}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding ElementName=View, Path=DataContext.TileColumns}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </md:DialogHost>
</UserControl>